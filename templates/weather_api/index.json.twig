    {
      "date": "{{ measurement.date.format('Y-m-d') }}",
      "temperature_celsius": "{{ measurement.temperature }}",
      "temperature_fahrenheit": "{{ measurement.fahrenheit }}"
    }
    {% if not loop.last %},{% endif %}
    {% endfor %}
  ]
}
